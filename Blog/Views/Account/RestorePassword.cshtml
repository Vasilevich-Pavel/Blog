@{
	ViewBag.Title = "Восстановление пароля";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Восстановление пароля</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<h4>Введите Email, на который будет отправлен новый пароль</h4>
			@Html.Label("Email", "Email", htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.Editor("Email", new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessage("Email", "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Восстановить пароль" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Назад", "Login", "Account")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
