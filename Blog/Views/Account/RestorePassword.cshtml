@{
	ViewBag.Title = "Восстановление пароля";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

<div class="form-horizontal">
	<h3>Восстановление пароля</h3>
	<hr />
	<div class="form-group">
		<div class="col-md-10">
			<h4>Введите Email, на который будет отправлено письмо с паролем</h4>
		</div>
		@Html.Label("Email", "Email", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.Editor("Email", new { htmlAttributes = new { @class = "form-control account", @type = "email", @autocomplete = "off", @required = "on", @placeholder = "Введите Email" } })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Восстановить пароль" class="btn btn-default" />
		</div>
	</div>
</div>
}

<div>
	@Html.ActionLink("Назад", "Login", "Account")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
