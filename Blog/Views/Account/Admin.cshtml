@model Blog.Models.User

@{
	ViewBag.Title = "Личный кабинет";
}

<h2>Личный кабинет</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

<div class="form-horizontal">
	<hr />
	<h3>Редактировать профиль</h3>
	@Html.ValidationSummary("Допустимые символы для логина и пароля: буквы лaтинского алфавита, цифры и знак подчеркивания.Допустимая длина: 5 - 15 символов", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(model => model.Login, "Логин", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control account", @autocomplete = "off", @required = "on", @placeholder = "Введите логин", @pattern = "^[A-Za-z\\d_]{5,15}$", @value = Model.Login } })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Password, "Пароль", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.PasswordFor(model => model.Password, new { @class = "form-control account", @autocomplete = "off", @required = "on", @placeholder = "Введите пароль", @pattern = "^[A-Za-z\\d_]{5,15}$", @value = Model.Password })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control account", @type = "email", @autocomplete = "off", @required = "on", @placeholder = "Введите Email", @value = Model.Email } })
		</div>
	</div>

	<div class="form-group">
		@Html.HiddenFor(model => model.User_Id, new { htmlAttributes = new { @class = "form-control", @value = Model.User_Id } })
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button type="submit" name="action" value="saveAdmin" class="btn btn-default">Сохранить</button>
		</div>
	</div>

	<hr />

	<h3>Зарегистрировать нового пользователя</h3>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button type="submit" name="action" value="registerAdmin" class="btn btn-default">Зарегистрировать</button>
		</div>
	</div>

	<hr />

	<h3>Выйти</h3>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button type="submit" name="action" value="exitAdmin" class="btn btn-default">Выйти</button>
		</div>
	</div>

	<hr />

	<h3>Удалить аккаунт</h3>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<button type="submit" name="action" value="deleteAdmin" class="btn btn-default">Удалить</button>
		</div>
	</div>
</div>
}

